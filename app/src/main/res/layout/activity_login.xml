<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="35dp"
        >

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="10dp"
            >

            <requestFocus />

            <com.loopeer.shadow.ShadowView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                app:backgroundColor="@android:color/white"
                app:cornerRadius="40dp"
                app:shadowColor="@color/backgroundColor"
                app:shadowMargin="6dp"
                app:shadowRadius="0dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/logoDis"
                    android:src="@drawable/logo"
                    app:layout_gravity="center"
                    />
            </com.loopeer.shadow.ShadowView>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                >

                <AutoCompleteTextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_password"
                    android:imeActionId="6"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.loopeer.shadow.ShadowView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="18dp"
                android:elevation="5dp"
                app:backgroundColor="@android:color/white"
                app:cornerRadius="2dp"
                app:shadowColor="@color/backgroundColor2"
                app:shadowMargin="5dp"
                app:shadowRadius="3dp"
                >

                <TextView
                    android:id="@+id/sign_in_login"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="@string/action_sign_in"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    />

            </com.loopeer.shadow.ShadowView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="5dp"
                android:text="forgot password?"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                />

            <!--or-->
            <LinearLayout
                android:id="@+id/or_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                >

                <View
                    android:layout_width="110dp"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center_vertical"
                    android:background="#b4b4b4"
                    />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Or"
                    tools:ignore="HardcodedText"
                    />

                <View
                    android:layout_width="110dp"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center_vertical"
                    android:background="#b4b4b4"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="2dp"
                >


                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="#ccc"
                    />


                <FrameLayout
                    android:id="@+id/google_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background2"
                    >

                    <com.loopeer.shadow.ShadowView
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:elevation="5dp"
                        app:cornerRadius="2dp"
                        app:shadowColor="@color/backgroundColor2"
                        app:shadowMargin="6dp"
                        app:shadowRadius="2dp"
                        >

                        <ImageView
                            android:id="@+id/google_sign_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:elevation="5dp"
                            android:padding="3dp"
                            android:src="@drawable/google"
                            app:layout_gravity="center"
                            />

                    </com.loopeer.shadow.ShadowView>

                </FrameLayout>


                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="#ccc"
                    />


                <FrameLayout
                    android:id="@+id/facebook_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background2"
                    >


                    <com.loopeer.shadow.ShadowView
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:elevation="5dp"
                        app:cornerRadius="2dp"
                        app:shadowColor="@color/backgroundColor2"
                        app:shadowMargin="6dp"
                        app:shadowRadius="2dp"
                        >

                        <ImageView
                            android:id="@+id/facebook_signin_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:elevation="5dp"
                            android:padding="3dp"
                            android:src="@drawable/facebook"
                            app:layout_gravity="center"
                            />

                    </com.loopeer.shadow.ShadowView>


                </FrameLayout>


                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="#ccc"
                    />


            </LinearLayout>

        </LinearLayout>


    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Are you new?"
            tools:ignore="HardcodedText"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:onClick="openSignupPage"
            android:padding="3dp"
            android:text="Register"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/background_blur_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/login_loader"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        app:indicatorColor="@android:color/white"
        app:indicatorName="BallPulseIndicator"
        />

</RelativeLayout>